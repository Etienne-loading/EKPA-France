<div class="container">
  <h1>Catalogue</h1>
  <div class="card-container">
    <% @formations.each do |formation|%>
      <div>
        <%= link_to formation_path(formation), class: "card-link m-auto my-4" do %>
          <div class="card-formation">
            <% if formation.photo != false %>
              <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path formation.photo.key, height: 300, crop: :fill %>')">
              </div>
              <div class="d-flex card-info">
                <div class="content-card">
                  <div class="title-card">
                    <%= formation.title %>
                  </div>
                  <div>
                    <p>par <%= formation.organisme.nom %></p>
                  </div>
                </div>
                <div>
                  <div class="element-card">
                    <%= formation.duree %>
                  </div>
                  <div class="element-card">
                    <%= formation.periode %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
        <div class="my-4">
          <%= link_to "modifier", edit_formation_path(formation), class:"btn btn-primary" %>
          <%= link_to "supprimer", formation_path(formation), class:"btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
