<div class="container">
  <h2>Inscription</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :prenom,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Prénom"} %>
      <%= f.input :nom,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Nom"} %>
      <%= f.input :password,
                  required: true,
                  label: "Mot de passe",
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "nouveau mot de passe" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: "confirmation",
                  input_html: { autocomplete: "nouveau mot de passe" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "S'incrire" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
