<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @formation.photo.key, crop: :fill %>')">
  <h1 class="banner-title"><%= @formation.title %> formation</h1>
</div>
<div>
  <div class="bg-primary col-2">
    <div class="sticky-top" style="top:85px;">
      <div>
        <i class="fa-solid fa-location-dot"></i>
        <p><%= @formation.lieu %></p>
      </div>
      <div>
        <i class="fa-solid fa-building"></i>
        <p><%= @formation.organisme.nom %></p>
      </div>
      <div>
        <i class="fa-solid fa-stopwatch"></i>
        <p><%= @formation.duree @formation.periode%></p>
      </div>
      <div>
        <i class="fa-solid fa-euro-sign"></i>
        <p><%= @formation.prix %></p>
      </div>
    </div>
  </div>
</div>
